<quiz>
    <!-- question: 1029304 -->
    <question type="multichoice">
        <name>
            <text>Rotational_Motion: Angular Displacement</text>
        </name>
        <questiontext format="html">
            <text>A point on a disc is initially at an angular position of ∅_i = 4 rad and rotates to a final angular position of ∅_f = 7 rad. What is the angular displacement?</text>
        </questiontext>
        <generalfeedback format="html">
            <text>The angular displacement is calculated as the difference between the final angular position (∅_f) and the initial angular position (∅_i).</text>
        </generalfeedback>
        <defaultgrade>1</defaultgrade>
        <penalty>0.3333333</penalty>
        <hidden>0</hidden>
        <idnumber/>
        <single>true</single>
        <shuffleanswers>true</shuffleanswers>
        <answernumbering>abc</answernumbering>
        <showstandardinstruction>0</showstandardinstruction>
        <correctfeedback format="html">
            <text>Your answer is correct.</text>
        </correctfeedback>
        <partiallycorrectfeedback format="html">
            <text>Your answer is partially correct.</text>
        </partiallycorrectfeedback>
        <incorrectfeedback format="html">
            <text>Your answer is incorrect.</text>
        </incorrectfeedback>
        <shownumcorrect/>
        <answer fraction="100" format="html">
            <text>3 rad</text>
            <feedback format="html">
                <text>Correct! Angular displacement is calculated as ∅_f - ∅_i = 7 rad - 4 rad = 3 rad.</text>
            </feedback>
        </answer>
        <answer fraction="0" format="html">
            <text>11 rad</text>
            <feedback format="html">
                <text>Incorrect. You might have added ∅_i and ∅_f instead of subtracting them.</text>
            </feedback>
        </answer>
        <answer fraction="0" format="html">
            <text>-3 rad</text>
            <feedback format="html">
                <text>Incorrect. The displacement is positive since the point moved forward from ∅_i to ∅_f.</text>
            </feedback>
        </answer>
        <answer fraction="0" format="html">
            <text>1 rad</text>
            <feedback format="html">
                <text>Incorrect. Recheck your subtraction: ∅_f - ∅_i = 7 rad - 4 rad.</text>
            </feedback>
        </answer>
        <tags>
            <tag>
                <text>Rotational Motion</text>
            </tag>
        </tags>
    </question>
</quiz>
